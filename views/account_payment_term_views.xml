<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="view_payment_term_form_fine_interst_boleto" model="ir.ui.view">
      <field name="name">account.payment.term.form.fine_interst_boleto</field>
      <field name="model">account.payment.term</field>
      <field name="inherit_id" ref="account.view_payment_term_form"/>
      <field name="arch" type="xml">
        <field name="company_id" position="after">
                <field name="interst_mode"/>
                <field name="interst_value"/>
                <field name="fine_mode"/>
                <field name="fine_value"/>
        </field>
      </field>
  </record>

</odoo>

